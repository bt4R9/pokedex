  "scripts": {
    "pokemons:init": "node ./scripts/createDatabase.js",
    "mongo:init": "sudo mkdir -p /data/db && sudo chmod 0755 /data/db && sudo chown -R $USER /data/db",
    "mongo:start": "/usr/local/bin/mongod --dbpath /data/db",
    "mongo:stop": "/usr/local/bin/mongo admin --eval 'db.shutdownServer()'",
    "nodemon:start": "./node_modules/.bin/nodemon --inspect src/server/index.js --config nodemon/development.json -w ./build/ -w ./src/server/",
    "webserver:start": "python -m SimpleHTTPServer",
    "webpack:start": "NODE_ENV=development BABEL_ENV=development webpack --watch --colors",
    "lint": "npm run lint:js & npm run lint:css",
    "lint:js": "eslint src/**",
    "lint:css": "stylelint src/**/*.css",
    "lint:fix": "npm run lint:fix:js && exit 1 & npm run lint:fix:css && exit 1",
    "lint:fix:js": "eslint --fix src/**",
    "lint:fix:css": "stylelint --fix src/**/*.css",
    "app:watch": "sh run.sh",
    "app:build": "NODE_ENV=production BABEL_ENV=production webpack --progress --colors",
    "test": "jest"
  },
  "devDependencies": {
